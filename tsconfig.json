{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "esnext",

    /* Bundler mode */
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* Linting */
    "strict": true
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}